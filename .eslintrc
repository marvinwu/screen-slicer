{
    "parserOptions": {
        "ecmaVersion": 6
    },
    "extends": [
        "airbnb",
        "prettier",
        "prettier/react",
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "jquery": true,
        "jest/globals": true
    },
    "rules": {
        "no-console": "off",
        "react/prop-types": "warn",
        "react/react-in-jsx-scope": "off",
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        "no-param-reassign": "off",
        "import/no-unresolved": 0,
        "import/extensions": 0,
        "space-before-function-paren": 0,
        "prettier/prettier": [
            "error",
            {
                "semi": false,
                "trailingComma": "es5",
                "singleQuote": true,
                "printWidth": 120
            }
        ]
    },
    "globals": {
        "React": "writable"
    },
    "plugins": [
        "prettier",
        "jest"
    ]
}